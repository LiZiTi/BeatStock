{
  "name": "ElonMars",
  "description": "ElonMars的个人股票分析工具",
  "author": "ElonMars <ok_ai@outlook.com>",
  "version": "1.0.0",
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:frontend": "cd frontend && npm install --legacy-peer-deps && npm run build",
    "build:backend": "cd backend && pip3 install -r requirements.txt && python3 -m PyInstaller run.py --noconsole --onefile --distpath ../build/backend",
    "build": "npm run build:frontend && npm run build:backend && electron-builder",
    "build:clean": "npm run clean && npm run build",
    "clean": "rm -rf build/ dist/ frontend/dist/",
    "package": "npm run build",
    "package:win": "npm run package -- --win",
    "package:mac": "npm run package -- --mac",
    "package:all": "npm run package -- --win --mac"
  },
  "build": {
    "appId": "com.elonmars.stock",
    "electronVersion": "33.0.2",
    "mac": {
      "target": "dmg",
      "icon": "resources/ElonMars.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "resources/ElonMars.ico"
    },
    "files": [
      "main.js",
      "package.json",
      "loading.html",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "build/backend",
        "to": "backend",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}